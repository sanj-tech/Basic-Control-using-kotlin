<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To snackCorner"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp">

    </TextView>

    <Spinner
        android:id="@+id/spin_count"
        android:layout_width="384dp"
        android:layout_height="42dp"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@id/cb_gulab_jamun"
        android:popupBackground="@drawable/shape"
        android:background="@drawable/custom_bg_snackcorner"
        />






<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Select as per Choice"-->
<!--        android:gravity="center"-->
<!--        android:textColor="@color/black"-->
<!--        android:textSize="20sp">-->

<!--    </TextView>-->
    <RelativeLayout
        android:layout_width="386dp"
        android:layout_height="312dp"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/cb_gulab_jamun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gulabjamun" />


        <ImageView
            android:id="@+id/img_gulab"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="92dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cb_gulab_jamun"
            android:scaleType="centerCrop"
            android:src="@drawable/gulajam" />

        <CheckBox
            android:id="@+id/cb_jalebi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_gulab_jamun"
            android:text="Jalebi" />

        <ImageView
            android:id="@+id/img_jalebi"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_below="@id/img_gulab"
            android:layout_marginLeft="129dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cb_jalebi"
            android:scaleType="centerCrop"
            android:src="@drawable/jalebi" />

        <CheckBox
            android:id="@+id/cb_sandesh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_jalebi"
            android:text="Sandesh" />

        <ImageView
            android:id="@+id/img_sandesh"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@id/img_jalebi"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cb_gulab_jamun"
            android:scaleType="centerCrop"
            android:src="@drawable/sandesh" />


        <CheckBox
            android:id="@+id/cb_laddoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_sandesh"
            android:text="Laddoo" />

        <ImageView
            android:id="@+id/img_laddoo"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_below="@id/img_sandesh"
            android:layout_marginLeft="91dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cb_gulab_jamun"
            android:scaleType="centerCrop"
            android:src="@drawable/laddoo" />


        <CheckBox
            android:id="@+id/cb_kajubarfi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_laddoo"
            android:text="Kaju Barfi" />

        <ImageView
            android:id="@+id/img_kaju_barfi"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@id/img_laddoo"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cb_gulab_jamun"
            android:scaleType="centerCrop"
            android:src="@drawable/kaju" />

        <CheckBox
            android:id="@+id/cb_imarti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_kajubarfi"
            android:text="Imarti " />

        <ImageView
            android:id="@+id/img_imarti"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/img_kaju_barfi"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cb_gulab_jamun"
            android:scaleType="centerCrop"
            android:src="@drawable/imarti" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Soft Cold Drinks"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="382dp"
        android:layout_height="132dp"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/cb_Pepsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepsi " />

        <ImageView
            android:id="@+id/img_papsi"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/cb_Pepsi"
            android:scaleType="centerCrop"
            android:src="@drawable/coca" />

        <CheckBox
            android:id="@+id/cb_CocaCola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_Pepsi"
            android:text="Coca Cola " />

        <ImageView
            android:id="@+id/img_coca"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/img_papsi"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cb_CocaCola"
            android:scaleType="centerCrop"
            android:src="@drawable/coca" />

        <CheckBox
            android:id="@+id/cb_Slice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/cb_CocaCola"
            android:text="Slice " />


        <ImageView
            android:id="@+id/img_slice"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_below="@id/img_coca"
            android:layout_marginLeft="153dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cb_Slice"
            android:scaleType="centerCrop"
            android:src="@drawable/slice" />
    </RelativeLayout>

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Do you like all items?"
    android:textColor="@color/black"
    android:textSize="20sp"/>
<RadioGroup
    android:id="@+id/radio_Group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/rdb_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes">

    </RadioButton>
    <RadioButton
        android:id="@+id/rdb_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No">

    </RadioButton>
</RadioGroup>

    <Button
        android:id="@+id/bt_total"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:background="@drawable/shape"
        android:text="Total charges" />



</LinearLayout>